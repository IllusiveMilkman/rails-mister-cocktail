<nav class="navbar navbar-light bg-light mb-4">
 <a href="<%= cocktails_path %>"><%= image_tag("Tails.png", class: "menu_icon")%></a>
  <%= link_to 'Home', cocktails_path, :class => 'nav-link' %>
</nav>

 <div class="container col-md-6 offset-md-3">
    <h2><%= @cocktail.name %></h2>
    <hr>

    <div class="container new-dose <%= @doses.count == 0 ? "hidden" : ""%>">
      <h3 style="color: #834c69;">Ingredients</h3>
      <table class="table table-bordered table-doses">
        <thead>
          <tr>
            <th scope="col">Dose</th>
            <th scope="col">Ingredient</th>
            <th scope="col">Trash</th>
          </tr>
        </thead>
        <tbody>
          <% @doses.each do |dose| %>
            <tr>
              <td><%= dose.description %></td>
              <td><%= dose.ingredient.name %></td>
              <td>
                <%= link_to 'ðŸ—‘', cocktail_dose_path(params[:id], dose),
                  method: :delete,
                  data: { confirm: "Are you sure you want to delete this task?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="container mt-4 new-dose">
      <h2>Add a new dose for <%= @cocktail.name %></h2>
      <br>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.input :description %>
        <%= f.association :ingredient %>
        <%= f.submit "Add a dose", class: "btn btn-primary" %>
      <% end %>
    </div>
</div>


